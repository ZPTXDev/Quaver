{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"target": "ES2022",
		"module": "ES2022",
		"allowJs": true,
		"alwaysStrict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"moduleResolution": "Node16",
		"skipLibCheck": true,
		"sourceMap": true,
		"paths": {
			"#src/*": ["src/*"]
		}
	},
	"include": ["src/**/*"]
}
